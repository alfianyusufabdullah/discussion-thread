<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp">


    <ImageView
        android:id="@+id/itemIcUsername"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemUserThread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        android:textColor="#BC333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/itemIcUsername"
        app:layout_constraintStart_toEndOf="@id/itemIcUsername"
        app:layout_constraintTop_toTopOf="@id/itemIcUsername"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/itemTimeThread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textColor="#BC333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/itemUserThread"
        app:layout_constraintStart_toEndOf="@id/itemUserThread"
        app:layout_constraintTop_toTopOf="@id/itemUserThread"
        tools:text="20:20" />

    <TextView
        android:id="@+id/itemQuestionThread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#BC333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/itemIcUsername"
        app:layout_constraintTop_toBottomOf="@id/itemTimeThread"
        tools:text="@sample/discussion.json/discussion/question" />

    <ImageView
        android:id="@+id/itemIcCommentThread"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toStartOf="@id/itemIcUsername"
        app:layout_constraintTop_toBottomOf="@id/itemQuestionThread" />

    <TextView
        android:id="@+id/itemReplyThread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        android:textColor="#BC757474"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/itemIcCommentThread"
        app:layout_constraintStart_toEndOf="@id/itemIcCommentThread"
        app:layout_constraintTop_toTopOf="@id/itemIcCommentThread"
        tools:text="3 Balasan" />

    <View
        android:layout_width="50dp"
        android:layout_height="0.1dp"
        android:layout_marginTop="14dp"
        android:background="#23000000"
        app:layout_constraintStart_toStartOf="@id/itemIcCommentThread"
        app:layout_constraintTop_toBottomOf="@id/itemReplyThread" />

</androidx.constraintlayout.widget.ConstraintLayout>